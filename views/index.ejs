<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1 class="my-4"><%= title %></h1>
    <ul class="list-group">
      <% messages.forEach((message, index) => { %>
        <li class="list-group-item message">
          <h2><%= message.user %></h2>
          <p><%= message.text %></p>
          <a href="/message/<%= index %>" class="btn btn-primary">Open</a>
        </li>
      <% }) %>
    </ul>
    <a href="/new" class="btn btn-success mt-4">New Message</a>
  </div>
</body>
</html>